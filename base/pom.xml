                                        <skip>${skipUpgradeLiquibase}</skip>
                                    </configuration>
                                    <phase>process-resources</phase>
                                    <goals>
                                        <goal>update</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                </plugins>
            </build>
